<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Admin</title>
  </head>
  <style>
    body{
       width:100%; 
       overflow-x: hidden;
       font-family:  serif;
       font-weight: 800;
      }
    
  </style>
  
  <body >
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#" style="font-size: 25px">Admin portal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/" style="font-size: 20px">Home</a>
            </li>
           
            
            <li class="nav-item">
              <a data-bs-toggle="modal"  data-bs-target="#exampleModal" class="nav-link active" aria-current="page" href="" style="font-size: 20px">Add Item</a>
            </li>
            <!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Item</h5>
        
      </div>
      <div class="modal-body">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
          <input id="nt"type="text" placeholder="Name" class="form-control" value=""  aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-coins"></i></span>
          <input id="ca" type="number" placeholder="Coins" class="form-control" value=""  aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-stack-exchange"></i></span>
          <input id="sa" type="number" placeholder="Stock" class="form-control" value="" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
          <input id="img" type="text" placeholder="https://i.imgur.com/XPdLnby.jpeg" class="form-control" value=""  aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="form-check form-check-inline">
          
          <input id="categ1" class="form-check-input" type="radio" name="inlineRadioOptions"  value="cat1" checked>
          
          <label class="form-check-label" for="inlineRadio1">cat1</label>
        </div>
        <div class="form-check form-check-inline">
         
            <input id="categ2" class="form-check-input" type="radio" name="inlineRadioOptions"  value="cat2">
            
          <label class="form-check-label" for="inlineRadio2">cat2</label>
        </div>
        <div class="form-check form-check-inline">
       
            <input id="categ3" class="form-check-input"  type="radio" name="inlineRadioOptions"  value="cat3">
           
          <label class="form-check-label" for="inlineRadio3">cat3</label>
        </div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="add"  data-bs-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>
          </ul>
         
        </div>
      </div>
    </nav>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="text-align: center; font-size: 30px; display: none; height: 110px;  padding-top: 30px" id="suc">
      Refresh Page to view changes!
      <button style="padding-top: 44px" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" id="open"></button>
    </div>
    <div class="d-flex" >
       <div class="col-md-12  p-3 scroll-row" style="animation: bottomToTop 2s">
        <div class="container fluid">
          <div class="row fluid">
           <% var i =0 %>
          <% prod.forEach(x => { i++; %>
            <div class="card p-12" style="width: 18rem;  margin: auto; margin-bottom: 25px;">
              
              <img src="<%= x.url %>" class="card-img-top" alt="..." style="height: 350px">
              <div class="card-body">
                <h5 class="card-title" style="font-size: 25px"><%= x.name %></h5>
             
                <bold><small style="font-size: 18px"><%= x.category %></small></bold>
                <p class="card-text">
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" style="font-size: 18px">Cost</span>
                    <input type="text" readonly="true" id="<%= i %>ct" style="font-size: 18px" class="form-control" value="<%= x.cost %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                  </div>
                </p>
                <p class="card-text">
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" style="font-size: 18px">Stock</span>
                    <input type="text" readonly="true" id="<%= i %>st" style="font-size: 18px" class="form-control" value="<%= x.stock %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                  </div>
                </p>
                
                <a data-bs-toggle="modal"  data-bs-target="#exampleModal<%= i %>" class="btn btn-primary" id="<%= i %>et">Edit Item</a>
                <a  data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= i %>" class="btn btn-danger" id="<%= i %>dt">Delete Item</a>


              


              </div>
            </div>
            <% }) %>

            <% var i =0 %>
            <% prod.forEach(k => { i++; %>


              <div class="modal fade" id="staticBackdrop<%= i %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="<%= i-2 %>" aria-labelledby="staticBackdropLabel<%= i %>" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="staticBackdropLabel">Are you sure you want to delete Item : <%= k.name %> </h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      ...
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-success" id="<%= i %>delt" data-bs-dismiss="modal">Yes</button>
                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                    </div>
                  </div>
                </div>
              </div>              


          <div class="modal fade" id="exampleModal<%= i %>" tabindex="<%= i-2 %>" aria-labelledby="exampleModalLabel<%= i %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel<%= i %>" style="font-size: 25px" >Edit Item : <%= k.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="font-size: 17px">
                  <form action="/admin/add-product" method="POST">
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                    <input id="<%= i %>nt"type="text" class="form-control" value="<%=k.name%>"  aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-coins"></i></span>
                    <input id="<%= i %>ca" type="number" class="form-control" value="<%=k.cost%>"  aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-stack-exchange"></i></span>
                    <input id="<%= i %>sa" type="number" class="form-control" value="<%=k.stock%>" aria-label="Username" aria-describedby="basic-addon1">
                  </div>
                  <div class="form-check form-check-inline">
                    <% if(k.category == 'cat1') { %>
                    <input id="<%= i %>categ1" class="form-check-input" type="radio" name="inlineRadioOptions"  value="cat1" checked>
                    <% } else { %>
                      <input id="<%= i %>categ1" class="form-check-input"  type="radio" name="inlineRadioOptions"  value="cat1">
                      <% } %>
                    <label class="form-check-label" for="inlineRadio1">cat1</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <% if(k.category == 'cat2') { %>
                      <input id="<%= i %>categ2" class="form-check-input" type="radio" name="inlineRadioOptions"  value="cat2" checked>
                      <% } else { %>
                        <input id="<%= i %>categ2" class="form-check-input" type="radio" name="inlineRadioOptions"  value="cat2">
                        <% } %>
                    <label class="form-check-label" for="inlineRadio2">cat2</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <% if(k.category == 'cat3') { %>
                      <input id="<%= i %>categ3" class="form-check-input"  type="radio" name="inlineRadioOptions"  value="cat3" checked>
                      <% } else { %>
                        <input id="<%= i %>categ3" class="form-check-input"  type="radio" name="inlineRadioOptions"  value="cat3">
                        <% } %>
                    <label class="form-check-label" for="inlineRadio3">cat3</label>
                  </div>
                </form>
                </div>
                <div class="modal-footer">
                  <button data-bs-dismiss="modal" type="button" class="btn btn-success" id="<%= i %>yt"><a href="#" style="text-decoration: none; color:#e5f5f5" >Save Changes</a></button>
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Don't save</button>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
          </div>
         </div>
       </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c5d7c8bb5c.js" crossorigin="anonymous"></script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
    <script>
      window.onload = () => {

        document.getElementById('open').addEventListener('click', () => {
          window.location.href = '/admin/add-product'
       })
        var as = document.getElementById(`add`)
        as.addEventListener('click', () => {
         var fina
       
         if ( document.getElementById(`categ1`).checked == true ) {
           fina = document.getElementById(`categ1`).value
         }
         if ( document.getElementById(`categ2`).checked == true ) {
           fina = document.getElementById(`categ2`).value
         }
         if ( document.getElementById(`categ3`).checked == true ) {
           fina = document.getElementById(`categ3`).value
         }
        
         const res =  fetch(`/admin/add-product`, {
             method: "POST",
             headers: {
               'Accept': 'application/json',
               "Content-Type": "application/json",
             },
          
             body: JSON.stringify({
               "name"  : document.getElementById(`nt`).value,
               "cost"  : document.getElementById(`ca`).value,
               "stock" : document.getElementById(`sa`).value,
               "category" : fina,
               "add" : true,
               "url" : document.getElementById(`img`).value
             }),
           }).then(res => {  
               if (res.status !== 200) {
                   console.log("error")
               } else {
                 console.log("FU")
                 res.json().then(data => {
                   console.log(data)
                 })
               }
             })
             document.getElementById('suc').style.display="block";
        })
      
      for(var j =0; j<`<%-prod.length %>`; j++) {  
        (function() {
         var p = j+1
         
        
         var w = document.getElementById(`${p}yt`)
         w.addEventListener('click', () => {
          var final
        
          if ( document.getElementById(`${p}categ1`).checked == true ) {
            final = document.getElementById(`${p}categ1`).value
          }
          if ( document.getElementById(`${p}categ2`).checked == true ) {
            final = document.getElementById(`${p}categ2`).value
          }
          if ( document.getElementById(`${p}categ3`).checked == true ) {
            final = document.getElementById(`${p}categ3`).value
          }
         
          const res =  fetch(`/admin/add-product`, {
              method: "POST",
              headers: {
                'Accept': 'application/json',
                "Content-Type": "application/json",
              },
           
              body: JSON.stringify({
                "id" : p,
                "name"  : document.getElementById(`${p}nt`).value,
                "cost"  : document.getElementById(`${p}ca`).value,
                "stock" : document.getElementById(`${p}sa`).value,
                "category" : final
              }),
            }).then(res => {  
                if (res.status !== 200) {
                    console.log("error")
                } else {
                  console.log("FU")
                  res.json().then(data => {
                    console.log(data)
                  })
                }
              })
              document.getElementById('suc').style.display="block";
             
          })



          var qw = document.getElementById(`${p}delt`)
         qw.addEventListener('click', () => {
         
         
          const res =  fetch(`/admin/add-product`, {
              method: "POST",
              headers: {
                'Accept': 'application/json',
                "Content-Type": "application/json",
              },
           
              body: JSON.stringify({
                "id" : p,
                "del" : true
              }),
            }).then(res => {  
                if (res.status !== 200) {
                    console.log("error")
                } else {
                  console.log("FU")
                  res.json().then(data => {
                    console.log(data)
                  })
                }
              })
              document.getElementById('suc').style.display="block";
          })



        }())
       }
      }
     </script>
  </body>
</html>