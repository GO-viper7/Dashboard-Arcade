<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Admin</title>
  </head>
  <style>
    body{
       width:100%; 
       overflow-x: hidden;
       font-family:  serif;
       font-weight: 800;
      }
    
  </style>
  
  <body >
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#" style="font-size: 25px">MarketPlace</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/" style="font-size: 20px">Home</a>
            </li>
           
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/" style="font-size: 20px">Shop</a>
            </li>
           
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit" id="search" >Search</button>
          </form>
        </div>
      </div>
    </nav>
    <div class="d-flex" >
       <div class="col-md-12  p-3 scroll-row" style="animation: bottomToTop 2s">
        <div class="container fluid">
          <div class="row fluid">
           <% var i =0 %>
          <% prod.forEach(x => { i++; %>
            <div class="card p-12" style="width: 18rem;  margin: auto; margin-bottom: 25px;">
              
              <img src="<%= x.url %>" class="card-img-top" alt="..." style="height: 350px">
              <div class="card-body">
                <h5 class="card-title" style="font-size: 25px"><%= x.name %></h5>
             
                <bold><small style="font-size: 18px"><%= x.category %></small></bold>
                <p class="card-text">
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" style="font-size: 18px">Cost</span>
                    <input type="text" readonly="true" id="<%= i %>ct" style="font-size: 18px" class="form-control" value="<%= x.cost %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                  </div>
                </p>
                <p class="card-text">
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" style="font-size: 18px">Stock</span>
                    <input type="text" readonly="true" id="<%= i %>st" style="font-size: 18px" class="form-control" value="<%= x.stock %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                  </div>
                </p>
                <a type="text" class="btn btn-primary" id="<%= i %>t">Save Changes</a>
                <a  class="btn btn-danger" id="<%= i %>et">Edit Item</a>
              </div>
            </div>
            <% }) %>
          </div>
         </div>
       </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
   <script>
    window.onload = () => {
    console.log(`<%-prod.length %>`)
    for(var j =0; j<`<%-prod.length %>`; j++) {  
      (function() {
       var p = j+1
       var d = document.getElementById(`${p}et`)
       d.addEventListener('click', () => {
         console.log(d.id)
         console.log(p, document.getElementById(`${p}st`))
         document.getElementById(`${p}st`).readOnly = false;
         document.getElementById(`${p}ct`).readOnly = false;
       })
      
       var w = document.getElementById(`${p}t`)
       w.addEventListener('click', () => {
        console.log(w.id)
        const res =  fetch(`http://localhost:3000/admin/add-product`, {
            method: "POST",
            headers: {
              'Accept': 'application/json',
              "Content-Type": "application/json",
            },
         
            body: JSON.stringify({
              "id" : p,
              "cost" :  document.getElementById(`${p}ct`).value,
              "stock" : document.getElementById(`${p}st`).value,
            }),
          }).then(res => {  
              if (res.status !== 200) {
                  console.log("error")
              } else {
                console.log("FU")
                res.json().then(data => {
                  console.log(data)
                })
              }
            })
            window.location.href = 'http://localhost:3000/admin/add-product'
         



          





       })
      }())
     }
    }
   </script>
  </body>
</html>