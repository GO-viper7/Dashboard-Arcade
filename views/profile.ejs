<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/profile.css">
  </head>
  
  <body >
    <div class="bg-image"></div>
    <div class="cnt">
    <div id="fi">
    <nav class="navbar navbar-expand-lg "  >
      <div class="container-fluid">
        <img src="https://cdn.discordapp.com/attachments/946793823730794588/984508739073740820/unknown.png" alt="" class="imgur"  >
        
        <div>
        <button style = "color: #fff" class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"><i class="fa-solid fa-bars" style="font-size:28px;"></i></span>
        </button>
      </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          
            <li class="nav-item">
              <a id="onlylap1" class="nav-link active" aria-current="page" href=""  >Profile</a>
            </li>
            <li class="nav-item">
              <a id="onlylap2" class="nav-link active" aria-current="page" href="/" >Home</a>
            </li>
           
           
          </ul>
          
        </div>
      </div>
    </nav>
  </div>
 
  <br>
    <div id = "profile">
      <div id="onlymob">
        <div id="onlymob">
          <div class="wrapper"> 
            <div class="mobDisplay"><br></div>      
              <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="" class="avatar"  >
              <div class="username">
                <%= user.username %><span style="color: #b9bbbe">#<%= user.discriminator %></span>
              </div>
              <div style="margin: 3% 5%; width: 90%; border: solid 1px #2b2e33;"></div>
              <div class="mobDisplay"><br></div>
              <div class="walletHead">Wallet Address</div>
              <div class="wallet"><%= profile.wallet %></div>
              <div class="mobDisplay"><br></div>
              <div class="walletHead">Shipping Address</div>
              <div class="wallet"><span style="font-weight: bold;">First and Last name:   </span><%= profile.name %></div>
              <div class="wallet"><span style="font-weight: bold;">Gender:   </span><%= profile.gender %></div>
              <div class="wallet"><span style="font-weight: bold;">Country:   </span><%= profile.country %></div>
              <div class="wallet"><span style="font-weight: bold;">Postal/Zip code:   </span><%= profile.zipCode %></div>
              <div class="wallet"><span style="font-weight: bold;">House-number + additions:   </span><%= profile.houseNumber %></div>
              <div class="wallet"><span style="font-weight: bold;">City:   </span><%= profile.city %></div>
              <div class="wallet"><span style="font-weight: bold;">Street-name:   </span><%= profile.streetName %></div>
              
              <button data-bs-toggle="modal" data-bs-target="#exampleModal" type="button" class="btn btn-secondary mt-auto" style="  width: 100%; font-size: 20px; margin-top: 3%">
                Edit Details
              </button>
              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Edit Details</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form action="/signin" method="post" id="forming">
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="name" id="nt" type="text" placeholder="First & Last-name" class="form-control" value="<%= profile.name %>"  aria-label="Username" aria-describedby="basic-addon1" >
                        </div>
                        <div class="form-check form-check-inline  mb-3">
                          <% if(profile.gender == "male") { %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male" checked>
                          <% } else {   %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male">
                          <% }  %>
                          <label class="form-check-label" for="inlineRadio1" >Male</label>
                        </div>
                        <div class="form-check form-check-inline  mb-3">
                          <% if(profile.gender == "female") { %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female" checked>
                          <% } else {   %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female">
                          <% }  %>
                          <label class="form-check-label" for="inlineRadio2" >Female</label>
                        </div>
                        <div class="form-check form-check-inline  mb-3">
                          <% if(profile.gender == "other") { %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="other" checked>
                          <% } else {   %>
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="other">
                          <% }  %>
                          <label class="form-check-label" for="inlineRadio3" >Other</label>
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="wallet" id="nt" type="text" placeholder="Wallet-address*" class="form-control" value="<%= profile.wallet %>"  aria-label="Username" aria-describedby="basic-addon1" required>
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="country" id="nt" type="text" placeholder="Country" class="form-control" value="<%= profile.country %>"  aria-label="Username" aria-describedby="basic-addon1" >
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="zip" id="nt" type="number" placeholder="Postal/Zip-code" class="form-control" value="<%= profile.zipCode %>"  aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="house" id="nt" type="text" placeholder="House number + additions" class="form-control" value="<%= profile.houseNumber %>"  aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="city" id="nt" type="text" placeholder="city" class="form-control" value="<%= profile.city %>"  aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-id-badge"></i></span>
                          <input name="street" id="nt" type="text" placeholder="street Name" class="form-control" value="<%= profile.streetName %>"  aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                      </form>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary" form="forming">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c5d7c8bb5c.js" crossorigin="anonymous"></script>
  </body>
</html>